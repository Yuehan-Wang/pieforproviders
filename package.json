{
  "name": "pieforproviders",
  "version": "1.0.0",
  "description": "A digital assistant for your child care business.",
  "main": "index.js",
  "repository": "git@github.com:pieforproviders/pieforproviders.git",
  "author": "Kate Donaldson <kate@katelovescode.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "yarn --cwd client install && yarn --cwd client build",
    "start-server": "bin/rails server -e test -p 5017",
    "cy:run": "cypress run --project ./spec --config video=false",
    "cy:open": "cypress open --project ./spec",
    "cy:ci": "start-server-and-test start-server http://localhost:5017 cy:run",
    "deploy": "cp -a client/build/. public/",
    "heroku-postbuild": "yarn build && yarn deploy",
    "start": "yarn --cwd client start",
    "test": "yarn --cwd client test",
    "lint": "yarn --cwd client lint",
    "lint:fix": "yarn --cwd client lint --fix",
    "format": "prettier --write \"**/*.+(js|jsx|json|yml|yaml|css|md|vue)\"",
    "install": "yarn --cwd client install",
    "ad": "yarn --cwd client add",
    "rm": "yarn --cwd client remove"
  },
  "engines": {
    "yarn": "1.22.4",
    "npm": "6.13.4",
    "node": "12.14.1"
  },
  "devDependencies": {
    "cypress": "^5.0.0",
    "faker": "^5.1.0",
    "start-server-and-test": "^1.11.3"
  }
}
