#!/bin/bash

echo '-------------------------'
echo 'rm -f tmp/pids/server.pid'
rm -f tmp/pids/server.pid

echo '-------------------'
echo 'docker-compose down'
docker-compose down

docker/bundle_install
docker/migrate

echo '--------------------------------------'
echo 'View this app at http://localhost:3000'
echo 'and the MailCatcher interface at http://localhost:1080 .'
echo ''
echo '--------------------'
echo 'Database parameters:'
echo 'Host: localhost'
echo 'Port number: 15432'
echo 'Database: pie_development'
echo 'Username and password: specified in .docker-env/development/database'
echo ''
docker-compose up rails
